<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <Button
        android:layout_width="180dp"
        android:layout_height="250dp"
        android:text="cobros"
        android:id="@+id/b_cobro"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="180dp"
        android:layout_height="250dp"
        android:text="pagos"
        android:id="@+id/b_pagos"
        android:layout_toEndOf="@+id/b_cobro"
        android:layout_alignBottom="@+id/b_cobro" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="lista cobros"
        android:id="@+id/b_listacobros"
        android:layout_toStartOf="@+id/b_pagos"
        android:layout_below="@+id/b_cobro"
        android:layout_alignParentBottom="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lista pagos"
        android:id="@+id/b_listapagos"
        android:layout_alignStart="@+id/b_pagos"
        android:layout_alignEnd="@+id/b_pagos"
        android:layout_below="@+id/b_pagos"
        android:layout_alignParentBottom="true" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="100dp"
        android:id="@+id/img_cobros"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/b_cobro"
        android:src="@drawable/cash"
        android:layout_alignBottom="@+id/b_cobro" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="100dp"
        android:id="@+id/img_pagos"
        android:layout_alignBottom="@+id/img_cobros"
        android:layout_alignEnd="@+id/b_pagos"
        android:layout_alignStart="@+id/b_pagos"
        android:src="@drawable/invoicecolor" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="100dp"
        android:id="@+id/img_listCobros"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/b_listapagos"
        android:src="@drawable/list"
        android:layout_alignBottom="@+id/b_listacobros" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="100dp"
        android:id="@+id/img_listPagos"
        android:layout_alignBottom="@+id/img_listCobros"
        android:layout_alignEnd="@+id/b_listapagos"
        android:layout_alignStart="@+id/b_listapagos"
        android:src="@drawable/list" />
</RelativeLayout>
